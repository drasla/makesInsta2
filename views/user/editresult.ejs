<section class="full_list" >
    <div class="full_left" style="padding-bottom: 60px;">
        <div class="content">
            <div class="edit">
                <div class="edit_pic">
                    <div class="pic">
                        <% if (myinfo.picture) { %>
                        <img src="/image/userpic/<%=myinfo.picture%>">
                        <% } else { %>
                            <img src="/image/userpic/nopic.jpg">
                        <% } %>
                    </div>
                    <div class="item_detail">
                        <h1><%=myinfo.username%></h1>
                    </div>
                </div>
                    <% if (locals.Msg) { %>
                    <h2 class="alert" style="font-size: 16px; line-height: 30px; margin-top: 40px;">
                        <%=locals.Msg%>
                    </h2>
                    <% } %>
            </div>
            <div class="rightDetail">
                <p class="redirect">3초 뒤에 이동됩니다.</p>
                <script type='text/javascript'>
                    <!--
                    setTimeout("location.href='/users/edit'", 3000);
                    //-->
                </script>
            </div>
        </div>
    </div>
    <%- include('../include/full_right') %>
</section>
